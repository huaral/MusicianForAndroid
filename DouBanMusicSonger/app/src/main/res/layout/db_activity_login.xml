<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#000000">

        <TextView
            android:id="@+id/nav_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户登录"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_mentlogo" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="+86"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_1"
            android:src="@mipmap/ic_arrow_down_black" />

        <View
            android:id="@+id/sep_1"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_1"
            android:background="#C8C8C8" />

        <EditText
            android:id="@+id/usernameText"
            style="?android:attr/textViewStyle"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sep_1"
            android:background="@null"
            android:inputType="textCapWords"
            android:gravity="center"
            android:hint="用户名"
            android:lines="1" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#C8C8C8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passwordrl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="+86"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_2" />

        <View
            android:id="@+id/sep_2"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_2" />

        <EditText
            android:id="@+id/passwordText"
            style="?android:attr/textViewStyle"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sep_2"
            android:background="@null"
            android:gravity="center"
            android:hint="密码"
            android:inputType="textPassword"
            android:lines="1" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#C8C8C8" />
    </RelativeLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="#333333"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="合作伙伴登录音乐人"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_login_weixin"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ic_login_sina"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ic_login_reren"/>
        <Button
            android:id="@+id/logon_qq"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ic_login_qq"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ic_login_douban"/>
    </LinearLayout>

</LinearLayout>
